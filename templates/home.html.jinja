<!doctype html>
<html lang="en">

<head>
    <title>Haze.</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="/static/css/home.css">
</head>

<body>
    <nav>
        <div class="nav-left">
            <img class="logo" src="images/logo.png" alt="" />
            <ul>
                <li><img src="images/notification.png" alt="" /></li>
                <li><img src="images/inbox.png" alt="" /></li>
                <li><img src="images/video.png" alt="" /></li>
            </ul>
        </div>

        <div class="nav-right">
            <div class="search-box">
                <img src="static/images/search.png" alt="zx" />
                <input type="text" name="" id="" placeholder="Search" />
            </div>
            <div class="nav-user-icon online" onclick="settingsMenuToggle()">
                <img src="images/profile-pic.png" alt="" />
            </div>
        </div>

        <!-- ---------Setting Menu ------------ -->
        <div class="settings-menu" id="subMenu">

            <div id="dark-btn">
                <span></span>
            </div>

            <div class="settings-menu-inner">

                <div class="user-profile">
                    <img src="images/profile-pic.png" alt="" />
                    <div>
                        <p>Shahzaib Khan</p>
                        <a href="#">See your profile</a>
                    </div>
                </div>
                <hr>

                <div class="user-profile">
                    <img src="images/feedback.png" alt="" />
                    <div>
                        <p>Give Feedback</p>
                        <a href="#">Help us to improve the new design</a>
                    </div>
                </div>
                <hr>

                <div class="settings-links">
                    <img class="settings-icon" src="images/setting.png" alt="">
                    <a href="#">Settings & Privacy <img src="images/arrow.png" width="10px" alt=""></a>
                </div>
                <div class="settings-links">
                    <img class="settings-icon" src="images/help.png" alt="">
                    <a href="#">Help & Support <img src="images/arrow.png" width="10px" alt=""></a>
                </div>
                <div class="settings-links">
                    <img class="settings-icon" src="images/display.png" alt="">
                    <a href="#">Display & Accessibility <img src="images/arrow.png" width="10px" alt=""></a>
                </div>
                <div class="settings-links">
                    <img class="settings-icon" src="images/logout.png" alt="">
                    <a href="#">Logout<img src="images/arrow.png" width="10px" alt=""></a>
                </div>

            </div>

        </div>
    </nav>


    <div class="container">

        <!-- ---------Left Sidebar ------------ -->
        <div class="left-sidebar">
            <div class="imp-links">
                <a href="/home"><img src="static/images/home.png" alt="" /> Home </a>
                <a href="/profile"><img src="static/images/friends.png" alt="" /> Profile </a>
                <a href="/settings"><img src="static/images/settings.png" alt="" /> Group </a>
            </div>
            <div class="shortcut-links">
                <p>Your Shortcuts</p>
                <a href="https://steamcenter.app/portal/home"><img src="images/shortcut-1.png" alt="" />Steamcenter</a>
                <a href="bksteam.schoology.com"><img src="images/shortcut-2.png" alt="" /> Schoology</a>

            </div>
        </div>



        <!-- ---------Main Content ------------ -->
        <div class="main-content">
            <div class="write-post-container">
                <div class="user-profile">
                    <img src="images/profile-pic.png" alt="" />
                    <div>
                        <p>{{ current_user.username }}</p>
                        <small>Public</small>
                    </div>
                </div>

                <div class="post-input-container">
                    <form action="/post" method="POST">
                        <textarea name="Description" rows="3" placeholder="What's on your mind, {{ current_user.username }}?" required></textarea>
                        <div class="add-post-links">
                            <input id="imagePost" type="text" name="Image" placeholder="Image URL">
                            <button id="submitPost" type="submit">Post</button>

                        </div>

                    </form>

                </div>

            </div>
            {% for post in posts %}
            <div class="post-container">
                <div class="post-row">
                    <div class="user-profile">
                        <img src="static/images/HazeLogo.png" alt="" />
                        <div>

                            <p>@{{ post.Username }}</p>

                            <span>{{ post.Timestamp }}</span>
                        </div>

                    </div>
                    <a href="#"><i class="fa-solid fa-ellipsis-vertical"></i></a>
                </div>
                <p class="post-text">{{ post.Description }}</p>
                {% if post.Image %}
                <img class="post-img" src="{{ post.Image }}" alt="" />
                {% endif %}
                <div class="post-row">
                    <div class="activity-icons">
                        <div><img src="static/images/like-blue.png" alt=""> {{ post.Likes }}</div>
                        <div><img src="images/comments.png" alt=""> {{ post.comments }}</div>
                        <div><img src="images/share.png" alt=""> {{ post.shares }}</div>
                    </div>
                    <div class="post-profile-icon">
                        <img src="images/profile-pic.png" alt="">
                    </div>
                </div>
            </div>
            {% endfor %}
            <img class="post-img" src="images/feed-image-5.png" alt="" />
            <div class="post-row"> -->
                <div class="activity-icons"> -->
                    <div><img src="images/like.png" alt="" /> 90</div>
                    <div><img src="images/comments.png" alt="" /> 20</div <div><img src="images/share.png" alt="" /> 5
                </div>
            </div>
            <div class="post-profile-icon"> -->
                <img src="images/profile-pic.png" alt="" />
                <i class="fa-solid fa-caret-down"></i>
            </div>
        </div>

        <!-- ---------Right Sidebar ------------ -->
        <div class="right-sidebar">
            <div class="sidebar-title">
                <h4>Events</h4>
            </div>
            <div class="event">
                <div class="left-event">
                    <h3>16</h3>
                    <span>February</span>
                </div>
                <div class="right-event">
                    <h4>Midwinter Break</h4>
                    <p><i class="fas fa-map-marker-alt"></i>NYCSchools</p>
                </div>
            </div>
        </div>

    </div>
    <script src="script.js"> </script>
</body>

</html>